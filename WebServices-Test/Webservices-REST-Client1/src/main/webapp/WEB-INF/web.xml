<web-app>
  <display-name>WebResource Client Application</display-name>
  
  <servlet>
  	<servlet-name>CustomerServlet</servlet-name>
  	<display-name>CustomerServlet</display-name>
  	<description></description>
  	<servlet-class>com.anupam.webservicesrestclient1.CustomerServlet</servlet-class>
